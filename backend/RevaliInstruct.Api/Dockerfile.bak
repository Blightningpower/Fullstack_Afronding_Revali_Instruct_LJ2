FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# kopieer solution en alleen de backend mappen die nodig zijn (voorkomt onbedoelde duplicates)
COPY RevaliSolution.sln ./
COPY backend/RevaliInstruct.Api/ ./RevaliInstruct.Api/
COPY backend/RevaliInstruct.Core/ ./RevaliInstruct.Core/

# restore op solution-level (zorgt dat projectrelaties eenduidig zijn)
RUN dotnet restore ./RevaliSolution.sln

WORKDIR /src/RevaliInstruct.Api
RUN dotnet publish RevaliInstruct.Api.csproj -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish .
ENV ASPNETCORE_URLS=http://+:80
ENTRYPOINT [\"dotnet\", \"RevaliInstruct.Api.dll\"]

